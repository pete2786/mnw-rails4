<meta name="description" content='<%= (content_for?(:description) ? yield(:description) : "The #{app_name} app provides the current weather, a (debately) funny response and a condition specific image. Try it out and share it with your friends!").html_safe %>'>
<meta name="keywords" content="Weather,Humor,Funny,Conditions,Cold,Minnesota,UffDa">
<meta name="author" content="Weather Clever">
<meta name="format-detection" content="telephone=no" />
<meta property="og:image" content="<%=(content_for?(:og_image) ? yield(:og_image) : asset_path('apple-icon-144x144.png'))%>" />
<meta property="og:title" content="<%= (content_for?(:title) ? "#{yield(:title)} - " : "").html_safe %><%=app_name%>" />
<meta property="og:type" content="website" />    
<meta property="og:description" content='<%= (content_for?(:description) ? yield(:description) : "The #{app_name} app provides the current weather, a (debately) funny response and a condition specific image. Try it out and share it with your friends!").html_safe %>'>
