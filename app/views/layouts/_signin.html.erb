<div class="modal fade" id="sign_in_modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">You must sign in to continue</h4>
      </div>
      <div class="modal-body">
        <p><%=app_name%> leverages Facebook to allow our community to contribute phrases and track reputation. We do not do anything with your account besides identify who you are. Please <%=link_to "Sign in with Facebook", signin_path%>.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <%=link_to "Sign in with Facebook", signin_path, class: "btn btn-primary", id: "modal-provider-link"%>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
$( document ).ready(function() {
  $(".sign_in_modal").click(function(e){
    var signin_path = '/auth/facebook?origin=' + e.target.href;
    $("#modal-provider-link").attr("href", signin_path);
  });
});
</script>
